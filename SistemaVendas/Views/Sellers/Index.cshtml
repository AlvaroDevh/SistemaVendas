@model IEnumerable<SistemaVendas.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">


    <thead>

        <tr class="custom-header-row">
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BirthData)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Salary)
            </th>

            <th></th>
        <tr>

    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" a>Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" a>Detalhes</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id" a>Deletar</a>


                </td>
            </tr>
        }
    </tbody>
</table>
